@model Team

@{
    ViewData["Title"] = "Team";
}

<div class="container">
    <h2>@Model.Name</h2>

    <div>
        <h4>Team</h4>
        <hr />
        <dl class="dl-horizontal" style="width: 30%; margin: 0; padding: 0;">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TeamTournaments)
            </dt>
            <dd>
                <ul>
                    @foreach (TeamTournament t in Model.TeamTournaments)
                    {
                        <li>@t.Tournament.Name</li>
                    }
                </ul>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Players)
            </dt>
            <dd>
                <ul>
                    @foreach (Player t in Model.Players)
                    {
                        <li>@t.Name</li>
                    }
                </ul>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Rewards)
            </dt>
            <dd>
                <ul>
                    @foreach (Reward t in Model.Rewards)
                    {
                        <li>@t.Name</li>
                    }
                </ul>
            </dd>
        </dl>

    </div>
    <div>
        <a class="btn btn-default" asp-action="Index">Back to List</a>
    </div>
</div>
