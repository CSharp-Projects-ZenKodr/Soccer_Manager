@model GeneralInfo

@{
    ViewData["Title"] = "Home Page";
}


<div class="container">

    <div class="infoBlock" style="width: 45%; display: inline-block";>
        <header>Current tournaments</header>
        <table>
            <tr>
                <th>Cup</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
            @foreach (Tournament cup in Model.Tournaments)
            {
            <tr>
                <td><a asp-controller="Home" asp-action="Cup" asp-route-id="@cup.TournamentId">@cup.Name</a></td>
                <td>@cup.StartDate</td>
                <td>@cup.EndDate</td>
            </tr>
            }
        </table>
    </div>



    <div class="infoBlock" style="width: 45%; display: inline-block;">
        <header> Best Player </header>
        <table>
            <tr>
                <th>Player</th>
                <th>Team</th>
            </tr>
            @foreach (Player player in Model.Players)
            {
                <tr>
                    <td>@player.Name @player.Surname</td>
                    <td>@player.Team.Name</td>
                </tr>
            }
        </table>
    </div>

</div>