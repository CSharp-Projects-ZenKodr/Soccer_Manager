<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" />
    <link rel="stylesheet" asp-href-include="/css/styles.css" />
    <link rel="icon" type="image/x-icon" href="favicon.ico">

    <title>SoccerManager</title>

</head>
<body>
    <header>
        SOCCER MANAGER
        @if (!User.Identity.IsAuthenticated)
        {
            <div style="float: right; margin-left: 1em;"><a class="btn btn-default" asp-action="Login" asp-controller="Account">Login</a></div>
            <div style="float: right; margin-left: 1em;"><a class="btn btn-default" asp-action="RegisterTeam" asp-controller="Account">Create Team</a></div>
            <div style="float: right; margin-left: 1em;"><a class="btn btn-default" asp-action="RegisterCup" asp-controller="Account">Create Cup</a></div>

        }
    </header>
    <nav>
        @await Component.InvokeAsync("NavigationMenu")
    </nav>
    <div style="margin-left: 12%;">
        @RenderBody()
    </div>
</body>
</html>